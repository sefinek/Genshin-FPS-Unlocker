<?xml version="1.0" encoding="utf-8"?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		autoReload="false"
		internalLogLevel="Warn"
		throwConfigExceptions="true"
		internalLogFile="${specialfolder:folder=ApplicationData}/Genshin Stella Mod/logs/nlog.log">

	<targets>
		<!-- Log file target -->
		<target xsi:type="File"
			name="file"
			fileName="${specialfolder:folder=ApplicationData}/Genshin Stella Mod/logs/${event-properties:AppName}/${event-properties:AppVersion}.log"
			layout="${longdate} ${uppercase:${level}} | ${exception:format=ToString:whenEmpty=${message}}" />

		<!-- Console target -->
		<target name="console" xsi:type="Console"
			layout="${longdate} ${uppercase:${level}} | ${message} ${exception:format=ToString}" />

		<!-- Debugger target -->
		<target xsi:type="Debugger"
			name="debugger"
			layout="${longdate} ${uppercase:${level}} | ${message} ${exception:format=ToString}" />
	</targets>

	<rules>
		<logger name="*" minlevel="Debug" writeTo="file" />
		<logger name="*" minlevel="Debug" writeTo="debugger" />
		<logger name="*" minlevel="Debug" writeTo="console" />
	</rules>
</nlog>